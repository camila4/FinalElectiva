<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalElectiva1.Ingresar">
    
    
    <StackLayout Orientation="Vertical" Padding="10" Margin="10" Spacing="10" BackgroundColor="White">

        <StackLayout Orientation="Vertical" Margin="0,50,0,0">
            <Entry
                Placeholder="Email"
                PlaceholderColor="Black"
                TextColor="Black"
                HorizontalOptions="FillAndExpand"/>

            <Entry
                Placeholder="Contraseña"
                PlaceholderColor="Black"
                IsPassword="True"
                TextColor="Black"/>
        </StackLayout>
        <Button
                    Text="Entrar"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="entrar1"/>

        <Label
                    Margin="0,20,0,0"
                    Text="¿No tienes una cuenta?"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    />
        <Button
                    Text="Crear Cuenta"
                    TextColor="Green"
                    BackgroundColor="White"
                    HorizontalOptions="Center"
                    Clicked="crea2"/>

    </StackLayout>

</ContentPage>